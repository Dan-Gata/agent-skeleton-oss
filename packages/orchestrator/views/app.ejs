            .sidebar {
                width: 260px;
                transform: translateX(-100%);
                position: fixed;
                height: 100vh;
                z-index: 1000;
            }

            .sidebar.mobile-open {
                transform: translateX(0);
            }

            .main-content {
                width: 100%;
            }

            .message {
                max-width: 95%;
            }
        }
    </style>
</head>

