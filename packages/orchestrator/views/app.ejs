            align-items: center;
            gap: 8px;
            margin-top: 8px;
            font-size: 12px;
            color: var(--text-secondary);
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--accent-success);
        }

        /* Navigation */
        .nav-menu {
            flex: 1;
            padding: 20px 0;
        }

        .nav-item {
