# Variables d'environnement pour production (Coolify)
# Ne PAS définir NODE_ENV comme "Available at Buildtime"
# Coolify l'ajoutera automatiquement au runtime

# === CRITIQUE (requis pour fonctionnalités principales) ===
OPENROUTER_API_KEY=your_openrouter_api_key_here

# === IMPORTANT (recommandé pour production) ===
PORT=3000
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM=your_email@gmail.com

# === OPTIONNEL (intégrations externes) ===
N8N_WEBHOOK_URL=
N8N_API_KEY=
COOLIFY_API_URL=
COOLIFY_API_KEY=
BASEROW_API_URL=
BASEROW_API_KEY=
VIDEO_TOOLKIT_FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_TOOLKIT_TEMP_DIR=/tmp/videos
VIDEO_TOOLKIT_MAX_FILE_SIZE=500000000
